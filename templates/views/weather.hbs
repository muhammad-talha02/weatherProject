<!DOCTYPE html>
<html lang="en">

<head>
    {{>headLinks}}
</head>

<body>
    {{>navbar}}

    <!-- home section  -->

    <div class="container my-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <form class="d-flex input-group">
                    <input class="form-control" id="C_name" type="search" placeholder="Enter City Name" aria-label="Search">
                    <button class="btn btn-outline-primary input-group-text" id="submitBtn" type="submit">Search</button>
                </form>
                <div class="result_temp text-white col-md-6 col-10 mx-auto mt-5">
                    <div class="top_Layer d-flex p-3">
                        <p class="me-auto" id="C_day">Tuesday</p>
                        <p><span id="current_date"></span> <span id="current_month">Month</span></p>
                    </div>
                    <div class="main_layer p-3">
                        <p id="city_name" class="">Get Output Here</p>
                        <div class="middle_layer hide d-flex justify-content-around">
                            <p><span id="temp"></span><sup>o</sup>C</p>
                            <p id="temp_Status"></p>
                        </div>
                <div class="loader" style="display: none;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>